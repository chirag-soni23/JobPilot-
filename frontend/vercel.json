{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cross-Origin-Opener-Policy", "value": "unsafe-none" },
        { "key": "Cross-Origin-Embedder-Policy", "value": "unsafe-none" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://jobpilot-1-8vnh.onrender.com/api/$1"
    },
     { "source": "/api/mail/(.*)", "destination": "/api/mail/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
